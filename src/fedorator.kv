#:kivy 1.0.9

<Label>:
    font_name: "fonts/cantarell/Cantarell-Regular"

# inspired by https://gist.github.com/rohman/5300469
<ConfirmPopup>:
    cols: 1
	Label:
		text: root.text
        text_size: (root.width*0.9, root.height)
        halign: "left"
        valign: "middle"
        font_size: 24
	GridLayout:
		cols: 2
		size_hint_y: None
		Button:
			text: 'Cancel'
			on_release: root.dispatch('on_answer', False)
            font_size: 20
		Button:
			text: 'Continue'
			on_release: root.dispatch('on_answer', True)
            font_size: 20

<BackLabel@Label>:
    font_size: 14
    size_hint: 0.3, 0.3
    text_size: 64, 32
    halign: "left"
    valign: "top"
    pos_hint: {'x': -0.02, 'y': 0.81}
    text: "<- back"
#    color: (1, 1, 1, 0.5)

<ImageButton@Button>:
    source: None
    background_color: 0, 0, 0, 0

    Image:
        source: root.source
        pos: root.pos
        size: root.size

<ReleaseButton>:
    height: 120
    width: root.width
    size_hint_x: 1.0
    size_hint_y: None
    
    Button:
        source: None
        size_hint: (1.0, 1.0)
        pos: (0, 0)
        
        background_color: (0x3c/255, 0x6e/255, 0xb4/255, 1)
        
        on_press:
            root.on_press()
    
    Label:
        pos: (-root.width + 120 + (root.width - 60), 0)
        text_size: (root.width - 120 - 20, root.height)
        halign: "left"
        valign: "middle"
        text: root.text
        font_size: 24
    
    Image:
        source: root.source
        size_hint: (1.0, 0.9)
        pos: (-root.width/2 + 60 + 4, root.height * 0.05)

<DetailMenu>:
#    dropdown_version:   dropdown_version
    dropdown_arch:      dropdown_arch
#    mainbutton_version: mainbutton_version
    mainbutton_arch:    mainbutton_arch
    flash_button: flash_button
    back_button: back_button
    back_label: back_label
    error_label: error_label
    status_label: status_label
    status_small_label: status_small_label
    progress_label: progress_label
    progress: progress
    
    RelativeLayout:
        size_hint: 1, 1
        
        BackLabel:
            id: back_label
        ImageButton:
            id: back_button
            source: root.release_image
            pos_hint: {'x': 0.025, 'y': 1.0 - 0.3}
            size_hint: 0.3, 0.3
            
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'list'
        
        Label:
            font_size: 34
            text_size: root.width * 0.6, None
            pos_hint: {'x': 0.20, 'y': 0.35}
            text: root.release_name
        
        Label:
            font_size: 20
            text_size: root.width * 0.9, None
            
            pos_hint: {'x': 0.0, 'y': 0.15}
            text: root.release_summary
        
#        DropDown:
#            id: dropdown_version
            
        DropDown:
            id: dropdown_arch
        
        GridLayout:
            size_hint: 0.9, 0.1
            pos_hint: {'x': 0.0, 'y': 0.35}
            cols: 2
            spacing: 8
            
            Label:
                text: "Version"

            Label:
                text: root.version
#            Button:
#                id: mainbutton_version
#                background_color: (0x3c/255, 0x6e/255, 0xb4/255, 1)
            
            Label:
                text: "Architecture"
                
            Button:
                id: mainbutton_arch
                background_color: (0x3c/255, 0x6e/255, 0xb4/255, 1)
        
        Button:
            id: flash_button
            size_hint: 0.95, 0.2
            pos_hint: {'x': 0.025, 'y': 0.025}
            text: ""
            on_press: root.ask_flash()
            background_color: (104/255, 159/255, 237/255, 1)
            font_size: 34
        
        Label:
            id: error_label
#            pos_hint: {'x': 0, 'y': -0.2}
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            bcolor: (0, 0, 0, 1)
            
            size_hint: 0.95, 0.2
            pos_hint: {'x': 0.025, 'y': 0.200}
        
        
        Label:
            id: status_label
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            bcolor: (0, 0, 0, 1)
            
            size_hint: 0.95, 0.2
            pos_hint: {'x': 0.025, 'y': 0.055}
            font_size: 32
        
        Label:
            id: status_small_label
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            bcolor: (0, 0, 0, 1)
            
            text: ""
            
            size_hint: 0.95, 0.15
            pos_hint: {'x': 0.025, 'y': 0.0}
            font_size: 18
        
        Label:
            id: progress_label
            pos_hint: {'x': 0, 'y': -0.21}
            text_size: self.size
            halign: 'right'
            valign: 'middle'
            font_size: 14
            color: (1, 1, 1, 0.5)
        
        ProgressBar:
            id: progress
            size_hint: 0.9, 1
            pos_hint: {'x': 0.05, 'y': -0.25}
            max: 1.0
        
        Widget:
            on_touch_up:
                root.touch()


<ListMenu>:
    scroll_view: scroll_view
    release_grid: release_grid
    
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        size_hint: 1, 1
        
        BackLabel:
        ImageButton:
            source: 'img/fedora.png'
            pos_hint: {'x': 0.075, 'y': 1.0 - 0.3}
            size_hint: 0.3, 0.3
            
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'front'
        
        Label:
            font_size: 34
            text_size: root.width * 0.6, None
            pos_hint: {'x': 0.25, 'y': 0.35}
            text: "Please choose a release"
        
        ScrollView:
            id: scroll_view
            size_hint: (1, None)
            size: (root.width, root.height * 0.7)
            
            GridLayout:
                id: release_grid
                cols: 1
                spacing: 8
                size_hint_y: None
        
                

<FedoratorMenu>:
    GridLayout:
        size_hint: 1, 1
        pos_hint: {'center_x': .5, 'center_y': .5}
        canvas:
                
        Image:
            source: 'img/fedora.png'
            pos: 32, -36
            size: root.width - 16*4, root.height - 16
            
        Label:
            font_size: 74 
            center_x: root.width / 2
            top: root.top - 24
            text: "Fedorator"
            
        Label:
            font_size: 26
            center_x: root.width / 2
            top: root.top - 86
            text: root.status_message
            halign: 'center'
            
        
        Label:
            font_size: 18
            text_size: 128, 64
            pos: 32, -12
            halign: 'left'
            valign: 'bottom'
            text: root.left_disk_text
            
        Label:
            font_size: 18
            text_size: 128, 64
            pos: root.width - 128, -12
            halign: 'right'
            valign: 'bottom'
            text: root.right_disk_text
        
        Label:
            font_size: 16
            text_size: 128, 64
            pos: root.width/1.75, root.height - 38
            halign: 'right'
            valign: 'bottom'
            text: root.ip
            color: (1, 1, 1, 0.5)
        
        

